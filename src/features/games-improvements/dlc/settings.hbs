{{#includes
  "@ta-x-partials/accordion.hbs"
  title="DLC"
  expanded=false
  accordion-target=".js-ta-x-settings-games-improvements-dlc"
  accordion-header-classes="labels"
  accordion-content-classes="js-ta-x-settings-games-improvements-dlc t-settings"
}}
  {{includes
    "@ta-x-partials/checkbox-setting.hbs"
    label="Override Achievement Settings"
    id="chkGamesImprovementsGameDLCOverride"
    config-path="gamesImprovements.dlc.gameDLCOverride"
    helper-render-condition='{ "selector": "#chkGamesImprovementsGameDLCOverride", "checked": false }'
    helper-text="Some settings will be inherited from Achievements."
    classes="ta-x-hide-border-when-unchecked"
  }}

  {{includes
    "@ta-x-partials/checkbox-setting.hbs"
    render-condition='{ "selector": "#chkGamesImprovementsGameDLCOverride", "checked": true }'
    label="Show Progress As XX/XX"
    id="chkGamesImprovementsGameDLCIndividualProgress"
    config-path="gamesImprovements.dlc.gameDLCIndividualProgress"
  }}

  {{includes
    "@ta-x-partials/checkbox-setting.hbs"
    render-condition='{ "selector": "#chkGamesImprovementsGameDLCOverride", "checked": true }'
    label="Enable DLC To Be Collapsible"
    id="chkGamesImprovementsGameDLCCollapsibleGroups"
    config-path="gamesImprovements.dlc.gameDLCCollapsibleGroups"
  }}

  {{includes
    "@ta-x-partials/checkbox-setting.hbs"
    render-condition='{ "selector": "#chkGamesImprovementsGameDLCOverride", "checked": true }'
    label="Default Status For Game DLC Achievements"
    id="chkGamesImprovementsGameDLCDefaultStatus"
    config-path="gamesImprovements.dlc.gameDLCDefaultStatus"
    classes="ta-x-hide-border"
  }}

  {{includes
    "@ta-x-partials/select-setting.hbs"
    render-condition='[
              { "selector": "#chkGamesImprovementsGameDLCOverride", "checked": true },
              { "selector": "#chkGamesImprovementsGameDLCDefaultStatus", "checked": true }]'
    id="selGamesImprovementsGameDLCDefaultStatusValue"
    config-path="gamesImprovements.dlc.gameDLCDefaultStatusValue"
    container-classes="ta-x-hide-padding-top ta-x-hide-border"
    options='[
                  { "value": "rdoAllAchievements", "text": "All", "selected": true },
                  { "value": "rdoWonAchievements", "text": "Won" },
                  { "value": "rdoNotWonAchievements", "text": "Not Won" }]'
  }}
{{/includes}}